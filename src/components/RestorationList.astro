---
import type { CollectionEntry } from 'astro:content';
import Button from './Button.astro';

type Props = { restoration: CollectionEntry<'restoration'>[] };

const { restoration } = Astro.props;

import Layout from '../layouts/Layout.astro';
---

	<section>
		{
			restoration.map((item) => (
				<article class="restore">
					<figure>
						<img src={item.data.coverLink} alt={item.data.title} />
					</figure>
					<div class="content">
						<h3>{item.data.title}</h3>
						<p>{item.data.geoloc}</p>
						<Button
							bg="#96B79A"
							text="#000"
							url={`/restoration/${item.data.link}`}
						>
							Read Further{' '}
						</Button>
					</div>
				</article>
			))
		}
	</section>

<style>
	section {
		width: fit-content;
		margin-left: auto;
		margin-right: auto;
	}
	article {
		/* border-bottom: solid 2.5px #000 */
		padding: var(--space-2xs);
	}

	article {
		display: flex;
		margin: var(--space-m) 0;
		gap: var(--space-xs);
	}
	article figure {
		height: 100vh%;
		width: 50%;
		max-width: 25rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	article img {
		height: 100%;
		width: 100%;
		object-fit: cover;
	}
</style>
